<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthActivity">

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:translationZ="1dp"
        app:layout_constraintDimensionRatio="w,18:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="130dp"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        android:background="@drawable/profile_img"/>

    <TextView
        android:id="@+id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="ID"
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_field" />

    <TextView
        android:id="@+id/id_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/id_title"
        app:layout_constraintStart_toEndOf="@+id/id_title"
        app:layout_constraintTop_toBottomOf="@+id/img_photo" />

    <TextView
        android:id="@+id/username_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="User Name:"
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/id_title"
        app:layout_constraintStart_toEndOf="@+id/id_field"
        app:layout_constraintTop_toBottomOf="@+id/img_photo" />

    <TextView
        android:id="@+id/username_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Bret"
        app:layout_constraintBaseline_toBaselineOf="@+id/username_title"
        app:layout_constraintStart_toEndOf="@+id/username_title" />

    <TextView
        android:id="@+id/name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:shadowColor="#000000"
        android:text="Leanne Graham"
        android:textColor="#7B1FA2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_photo" />

    <TextView
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Email:  "
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_title" />

    <TextView
        android:id="@+id/email_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Sincere@april.biz"
        app:layout_constraintBaseline_toBaselineOf="@+id/email_title"
        app:layout_constraintStart_toEndOf="@+id/email_title" />

    <TextView
        android:id="@+id/website_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Website: "
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/email_title"
        app:layout_constraintStart_toEndOf="@+id/email_field" />

    <TextView
        android:id="@+id/website_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="hildegard.org"
        app:layout_constraintBaseline_toBaselineOf="@+id/website_title"
        app:layout_constraintStart_toEndOf="@+id/website_title" />

    <TextView
        android:id="@+id/addr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Address:"
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_title" />

    <TextView
        android:id="@+id/addr_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Apt. 556, Kulas Light street,  Gwenborough city"
        app:layout_constraintBaseline_toBaselineOf="@+id/addr_title"
        app:layout_constraintStart_toEndOf="@+id/addr_title" />

    <TextView
        android:id="@+id/zipcode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="zipcode:"
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addr_title" />

    <TextView
        android:id="@+id/zipcode_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="92998-3874"
        app:layout_constraintBaseline_toBaselineOf="@+id/zipcode_title"
        app:layout_constraintStart_toEndOf="@+id/zipcode_title" />

    <TextView
        android:id="@+id/geo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="geo:"
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/zipcode_title"
        app:layout_constraintStart_toEndOf="@+id/zipcode_field" />

    <TextView
        android:id="@+id/geo_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="-37.3159,        81.1496"
        app:layout_constraintBaseline_toBaselineOf="@+id/geo_title"
        app:layout_constraintStart_toEndOf="@+id/geo_title" />

    <TextView
        android:id="@+id/phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Phone Number:  "
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zipcode_title" />

    <TextView
        android:id="@+id/phone_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1-770-736-8031 x56442"
        app:layout_constraintBaseline_toBaselineOf="@+id/phone_title"
        app:layout_constraintStart_toEndOf="@+id/phone_title" />

    <TextView
        android:id="@+id/company_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Company:"
        android:textColor="#0097A7"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_title" />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Romaguera-Crona"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/company_title"
        app:layout_constraintStart_toEndOf="@+id/company_title" />

    <TextView
        android:id="@+id/catchPharse_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="catchPharse:"
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/company_title" />

    <TextView
        android:id="@+id/catchPharse_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Multi-layered client-server neural-net"
        app:layout_constraintBaseline_toBaselineOf="@+id/catchPharse_title"
        app:layout_constraintStart_toEndOf="@+id/catchPharse_title" />

    <TextView
        android:id="@+id/bs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="bs"
        android:textColor="#0097A7"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catchPharse_title" />

    <TextView
        android:id="@+id/bs_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="harness real-time e-markets"
        app:layout_constraintBaseline_toBaselineOf="@+id/bs_title"
        app:layout_constraintStart_toEndOf="@+id/bs_title" />

</androidx.constraintlayout.widget.ConstraintLayout>